@import 'lib';


browser-env--toggled-off() {
    .browser-env--toggled-off & {
        {block}
    }
}


.build .build-header {
    background: $color-build-header-bg;
    color: $color-text;
    display: flex;
    font-size: 15px;
    height: 60px;
    justify-content: center;
    width: 100%;

    +media--desktop() {
        display: none;
    }
    .build-header-separator {
        display: none;
    }
    a {
        line-height: 50px;
        height: 100%;
        text-align: center;
        width: 50%;
    }
}

.build-content {
    +media--desktop() {
        padding: 0 30px;
    }
}

.browser-env--hidden {
    display: none;
}

.browser-env-header {
    background: $color-browser-env-header-bg;
    cursor: pointer;
    display: flex;
    justify-content: center;
    transition: background .1s;
    width: 100%;

    &:hover {
        background: $color-browser-env-header-hover-bg;
    }
    h3 {
        color: $color-text;
        margin-left: 5px;
        margin-right: 5px;
        text-transform: capitalize;
    }
}

.browser-env-captures {
    background: $black;
    display: flex;
    flex-direction: column;
    justify-content: center;
    max-height: 9999px;
    overflow: hidden;
    padding-bottom: 30px;
    transition: max-height .5s;

    +media--desktop() {
        flex-direction: row;
        flex-wrap: wrap;
        margin-bottom: 20px;
        max-width: 100%;
    }
    +browser-env--toggled-off() {
        max-height: 0 !important;
        padding: 0;
    }
}

.captures {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    padding: 0 10px;
    position: relative;
    max-width: 100%;

    h4 {
        color: $color-text;
        text-align: center;
        width: 100%;
    }
    ul {
        max-width: 100%;
    }
}

.image-comparator,
.image-comparator > .image-comparator-img,
.image-differ img {
    max-height: 480px;
}

.image-comparator-resize {
    height: 100%;
    max-height: 100%;
    width: auto;
}

[data-page-types~="build"] header {
    margin-bottom: 0;
}

.capture-filter {
    margin-bottom: 30px;
}
