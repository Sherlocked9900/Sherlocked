@import 'lib';


.captures {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    padding: 0 10px;
    position: relative;
    max-width: 100%;

    h4 {
        color: $color-text;
        text-align: center;
        width: 100%;
    }
    ul {
        max-width: 100%;
    }
}

.image-comparator,
.image-comparator > .image-comparator-img,
.image-differ img {
    max-height: 480px;
}

.image-comparator-resize {
    height: 100%;
    max-height: 100%;
    width: auto;
}

