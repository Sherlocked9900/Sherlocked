@import 'lib';


.landing {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: -30px;
}

.landing-graphic {
    background: url(../img/landing/graphic.png);
    display: flex;
    padding: 50px 0;
    justify-content: center;
    width: 100%;
}

.landing-graphic-letters {
    display: flex;
    flex-wrap: wrap;
    height: 100%;
    justify-content: center;
    width: 320px;
}

.landing-graphic-letter-group {
    align-items: center;
    display: flex;
    justify-content: center;
    width: 100%;
}

.landing-graphic-letter {
    align-items: center;
    color: $white;
    font-family: sans-serif;
    display: flex;
    justify-content: center;
    margin: 0;
    font-size: 36px;
    padding: 15px
    width: 45px;
}

[data-graphic-letter-group-index="1"] .landing-graphic-letter {
    background: $white;
    color: $black;
    margin-left: 3px;
    margin-right: 3px;
}

.landing-graphic-space {
    width: 25px;
}

.landing-info {
    display: flex;
    flex-wrap: wrap;
    max-width: 910px;
    padding: 30px;
    text-align: center;
    width: 100%;

    h2,
    h3 {
        width: 100%;
    }
}

.landing-brief-desc {
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-bottom: 30px;

    +media--desktop() {
        flex-direction: row;
    }
    li {
        padding: 0 10px;
    }
}

.landing-usage {
    display: flex;
    flex-wrap: wrap;
    width: 100%;

    ul {
        display: flex;
        flex-direction: column;
        justify-content: center;

        +media--desktop() {
            flex-direction: row;
        }
    }
    li {
        padding: 0 10px;
    }
}

.landing-test-example {
    margin-bottom: 30px;

    p code {
        font-size: 15px;
    }
}
