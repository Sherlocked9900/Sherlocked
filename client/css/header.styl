@import 'lib';


header {
    align-items: center;
    background: url(../img/header/bg.png);
    color: $color-text;
    display: flex;
    font-weight: 300;
    height: 60px;
    justify-content: center;
    padding: 0 30px;
    position: relative;

    +media--desktop() {
        justify-content: space-between;
        margin-bottom: 30px;

        +page-type--landing() {
            justify-content: flex-start;
        }
    }
    h1 {
        font-family: $font-header;
        margin: 0;

        a {
            color: $white;
        }
    }
    .build-header {
        display: flex;
        height: 100%;
    }
    .build-header a,
    .build-header-separator {
        align-self: center;
        font-size: 20px;
        margin: 0 5px;
    }
}

.header-title {
    display: none;
    height: 100%;

    +media--desktop() {
        align-items: center;
        display: flex;
        position: absolute;
        left: 0;
        margin: 0 auto;
        right: 0;
        top: 0;
        width: fit-content;
    }
}
