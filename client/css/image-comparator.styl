@import 'base.styl';

image-comparator--animated() {
    .image-comparator--animated & {
        {block}
    }
}

.image-comparator {
    display: flex;
    max-width: 100%;
    overflow: hidden;
    position: relative;

    > .image-comparator-img {
        width: 100%;
    }
}

.image-comparator-img {
    display: block;
}

.image-comparator-label {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    position: absolute;
    bottom: 0;
    right: 0;
    color: $white;
    padding: 1em;
    opacity: 0;
    transform: translateY(20px);
    transition: transform 0.3s 0.7s, opacity 0.3s 0.7s;
    visibility: hidden;

    &.image-comparator-label--visible {
        visibility: visible;
    }
}

.image-comparator-img--visible {
    opacity: 1;
    transform: translateY(0);
}

.image-comparator-resize {
    backface-visibility: hidden;
    background-position: left top;
    background-repeat: no-repeat;
    background-size: auto 100%;
    height: 100%;
    max-width: 100%;
    left: 0;
    overflow: hidden;
    position: absolute;
    top: 0;
    transform: translateZ(0);
    width: 0;

    +image-comparator--animated() {
        animation: image-comparator-bounce-in 0.7s;
        width: 92%;
    }
}

.image-comparator-resize .image-comparator-label {
    left: 0;
    right: auto;
}

.image-comparator-handle {
    background: $color-tertiary url("../img/image-comparator/arrows.svg") \
                no-repeat center center;
    box-shadow: 0 0 0 6px rgba(0, 0, 0, 0.2), 0 0 10px rgba(0, 0, 0, 0.6), \
                inset 0 1px 0 rgba(255, 255, 255, 0.3);
    cursor: move;
    position: absolute;
    height: 44px;
    width: 44px;
    // Center element.
    left: 50%;
    top: 50%;
    margin-left: -22px;
    margin-top: -22px;
    border-radius: 50%;
    opacity: 0;
    transform: translate3d(0, 0, 0) scale(0);

    +image-comparator--animated() {
        opacity: 1;
        transform: translate3d(0, 0, 0) scale(1);
        transition: transform 0.3s 0.7s, opacity 0s 0.7s;
    }
}

.image-comparator-handle--draggable {
    // Change background color when active.
    background-color: $color-secondary;
}

@keyframes image-comparator-bounce-in {
    0% {
      width: 0;
    }
    60% {
      width: 100%;
    }
    100% {
      width: 92%;
    }
}
